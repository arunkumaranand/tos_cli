    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "console": "integratedTerminal"
        },
{
  "name": "Python: Current File (uv)",
  "type": "debugpy",
  "request": "launch",
  "program": "${file}",
  "console": "integratedTerminal",
  "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
},
{
"name": "TOS: add template",
"type": "debugpy",
"request": "launch",
"module": "main",
"cwd": "D:\\aka\\_projects\\_sample_project",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "internalConsole",
"justMyCode": true,
"args": ["template", "add", "-n",  "proj", "--force"]
},
{
"name": "TOS: int template",
"type": "debugpy",
"request": "launch",
"module": "main",
"cwd": "D:\\aka\\_projects\\_active\\202511_fintrack",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "internalConsole",
"justMyCode": true,
"args": ["init", "-t",  "proj", "--force"]
},

{
"name": "TOS: env like (literal, no shell)",
"type": "debugpy",
"request": "launch",
"module": "main",
"cwd": "${workspaceFolder}",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "internalConsole",
"justMyCode": true,
"args": ["env", "like", "*co*"]
},
{
"name": "TOS: env like (terminal, quoted)",
"type": "debugpy",
"request": "launch",
"program": "${workspaceFolder}/main.py",
"cwd": "${workspaceFolder}",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "integratedTerminal",
"justMyCode": true,
"args": ["env", "like", "'co'"]
},
{
"name": "TOS: cd (AK_HOME)",
"type": "debugpy",
"request": "launch",
"module": "main",
"cwd": "${workspaceFolder}",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "internalConsole",
"args": ["cd", "AK_HOME"]
},
{
"name": "TOS: path (AK_HOME)",
"type": "debugpy",
"request": "launch",
"module": "main",
"cwd": "${workspaceFolder}",
"python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
"console": "internalConsole",
"args": ["path", "AK_HOME"]
}


            ]
}
